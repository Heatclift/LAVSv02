<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitdata.heatclift.lavs.MainActivity">

    <RelativeLayout
        android:id="@+id/rlcontrols"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_above="@+id/txtcopywrite"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtpass"
            android:layout_alignBottom="@+id/edtpass"
            android:layout_alignEnd="@+id/textView"
            android:text="Password:" />

        <EditText
            android:id="@+id/edruser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignStart="@+id/edtpass"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="Log-in" />

        <TextView
            android:id="@+id/txtreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnlogin"
            android:layout_alignBottom="@+id/btnlogin"
            android:layout_alignEnd="@+id/edtpass"
            android:layout_marginEnd="11dp"
            android:text="or Register"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="29dp"
            android:layout_toStartOf="@+id/btnlogin"
            android:text="User Name:" />

        <EditText
            android:id="@+id/edtpass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/textView2"
            android:ems="10"
            android:inputType="textPassword" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="LAVS"
        android:textColor="@color/colorAccent"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Loan Application and Verification System" />

    <TextView
        android:id="@+id/txtcopywrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView3"
        android:text="BitData Â© 2018" />

</RelativeLayout>
