<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitdata.heatclift.lavsv02.clidash">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="71dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_marginTop="27dp"
                android:text="Current Balance:" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                android:layout_marginStart="23dp"
                android:text="Principal Amount:" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/textView6"
                android:layout_centerVertical="true"
                android:text="Interest Amount:" />

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView7"
                android:layout_below="@+id/textView5"
                android:text="Gross Amount:" />

            <TextView
                android:id="@+id/txtcubal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView6"
                android:layout_marginStart="41dp"
                android:layout_toEndOf="@+id/textView5"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtprinamaount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtcubal"
                android:layout_alignTop="@+id/textView7"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtintamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtprinamaount"
                android:layout_alignTop="@+id/textView5"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtgrossamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtintamount"
                android:layout_alignTop="@+id/textView8"
                android:text="TextView" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="CURRENT LOAN STATEMENT" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="19dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:text="CURRENT DUE" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView16"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/textView14"
                android:text="Date:" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView15"
                android:layout_centerVertical="true"
                android:text="Past Due:" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView16"
                android:layout_below="@+id/textView16"
                android:layout_marginTop="16dp"
                android:text="Current Due:" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView17"
                android:layout_below="@+id/textView17"
                android:layout_marginTop="14dp"
                android:text="For settlement:" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignEnd="@+id/textView14"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtpdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtdate"
                android:layout_alignTop="@+id/textView16"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtcdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView9"
                android:layout_alignEnd="@+id/txtpdue"
                android:text="TextView" />

            <TextView
                android:id="@+id/txtfsettlement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtcdue"
                android:layout_alignTop="@+id/textView9"
                android:text="TextView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
